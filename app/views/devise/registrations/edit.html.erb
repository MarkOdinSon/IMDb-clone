<div class="flex h-screen items-center justify-center">
  <div class="flex justify-center flex-wrap mx-1.5">
    <!--Image-->
    <div class="flex">
      <img
        src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-login-form/draw2.webp"
        class="w-full"
        alt="Sample image"
        />
    </div>

    <!--Form-->
    <div class="flex items-center mx-1.5">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
        <p class="text-xl text-center">
          Edit email & password
        </p>

        <!-- Email input -->
        <div class="mb-6">
          <div class="field">
            <%= f.label :email %><br />
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'mb-2 form-control block w-full px-4 py-2 text-xl font-normal text-gray-700 bg-white bg-clip-padding border border-solid border-gray-300 rounded transition ease-in-out m-0 focus:text-gray-700 focus:bg-white focus:border-blue-600 focus:outline-none', placeholder: "New email address" %>
          </div>
        </div>

        <!-- Password inputs -->
        <div class="mb-6">
          <div class="field">
            <%= f.label :password %><br />
            <%= f.password_field :password, autocomplete: "new password", class: 'form-control block w-full px-4 py-2 text-xl font-normal text-gray-700 bg-white bg-clip-padding border border-solid border-gray-300 rounded transition ease-in-out m-0 focus:text-gray-700 focus:bg-white focus:border-blue-600 focus:outline-none', placeholder: 'New password' %>
          </div>
          <p class="text-gray-500">min 6 symbols</p>
        </div>

        <div class="mb-6">
          <div class="field">
            <%= f.label :password_confirmation %><br />
            <%= f.password_field :password_confirmation, autocomplete: "repeat new password", class: 'form-control block w-full px-4 py-2 text-xl font-normal text-gray-700 bg-white bg-clip-padding border border-solid border-gray-300 rounded transition ease-in-out m-0 focus:text-gray-700 focus:bg-white focus:border-blue-600 focus:outline-none', placeholder: 'Repeat new password' %>
          </div>
        </div>

        <div class="mb-6">
          <div class="field">
            <%= f.label :current_password %><br />
            <%= f.password_field :current_password, autocomplete: "repeat new password", class: 'form-control block w-full px-4 py-2 text-xl font-normal text-gray-700 bg-white bg-clip-padding border border-solid border-gray-300 rounded transition ease-in-out m-0 focus:text-gray-700 focus:bg-white focus:border-blue-600 focus:outline-none', placeholder: 'Current password' %>
          </div>
        </div>

        <div class="text-center lg:text-left">
          <div class="actions">
            <button class="w-full py-3 font-medium text-dark bg-indigo-600 hover:bg-indigo-500 rounded-lg border-indigo-500 hover:shadow inline-flex space-x-2 items-center justify-center">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                <path stroke-linecap="round" stroke-linejoin="round" d="M11 16l-4-4m0 0l4-4m-4 4h14m-5 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h7a3 3 0 013 3v1" />
              </svg>
              <%= f.submit "Update" %>
            </button>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>

<script type="text/javascript">
    window.scrollTo(0, document.getElementById("my_own_application_header").offsetHeight)
</script>
